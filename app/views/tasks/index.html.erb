<div>
  <div>
    <h1>
      List of all tasks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new task
    </h2>

    <form action="/insert_task" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <div>
        <label for="category_id_box">
          Category
        </label>

        <select id="category_id_box" name="query_category_id">
          <% @list_of_task_categories.each do |category| %>
            <option value="<%= category.id %>"><%= category.name %></option>
          <% end %>
        </select>
      </div>

      <div>
        <label for="fee_box">
          Fee
        </label>

        $ <input type="text" id="fee_box" name="query_fee" placeholder="0.00">
      </div>

      <div>
        <label for="deadline_box">
          Deadline
        </label>

        <input type="time" id="deadline_box" name="query_deadline">
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location">
      </div>

      <div>
        <label for="requester_id_box">
          Requester
        </label>

        <input type="text" id="requester_id_box" name="query_requester_id">
      </div>

      <button>
        Create task
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Description
        </th>

        <th>
          Category
        </th>

        <th>
          Fee
        </th>

        <th>
          Deadline
        </th>

        <th>
          Location
        </th>

        <th>
          Requester
        </th>

        <th>
          Status
        </th>

        <th>
          Accepted at
        </th>

        <th>
          Completed at
        </th>

        <th>
          Tasker
        </th>

        <th>
          Reviews count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_tasks.each do |a_task| %>
      <tr>
        <td>
          <%= a_task.id %>
        </td>

        <td>
          <%= a_task.title %>
        </td>

        <td>
          <%= a_task.description %>
        </td>

        <td>
          <%= a_task.category_id %>
        </td>

        <td>
          <%= a_task.fee %>
        </td>

        <td>
          <% if a_task.deadline.present? %>
            <%= distance_of_time_in_words(Time.current, a_task.deadline) %> remaining
          <% end %>
        </td>

        <td>
          <%= a_task.location %>
        </td>

        <td>
          <%= a_task.requester_id %>
        </td>

        <td>
          <%= a_task.status %>
        </td>

        <td>
          <%= a_task.accepted_at %>
        </td>

        <td>
          <%= a_task.completed_at %>
        </td>

        <td>
          <%= a_task.tasker_id %>
        </td>

        <td>
          <%= a_task.reviews_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_task.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_task.updated_at) %> ago
        </td>

        <td>
          <a href="/tasks/<%= a_task.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
